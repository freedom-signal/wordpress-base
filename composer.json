{
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "path",
      "url": "plugins/*/"
    },
    {
      "type": "path",
      "url": "themes/*/"
    },
    {
        "type": "vcs",
        "url": "git@github.com:seattleagainstslavery/gravityforms.git"
    },
    {
        "type": "vcs",
        "url": "git@github.com:seattleagainstslavery/gravityforms-stripe.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:seattleagainstslavery/gravityforms-cli.git"
  }
  ],
  "extra": {
    "wordpress-install-dir": "wordpress",
    "installer-paths": {
      "wp-content/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "wp-content/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "wp-content/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    }
  },
  "require": {
    "ext-gd": "*",
    "wpackagist-plugin/amazon-web-services": "^0.3.4",
    "wpackagist-plugin/amazon-s3-and-cloudfront": "^0.9.11",
    "wpackagist-plugin/sendgrid-email-delivery-simplified": "^1.7",
    "wpackagist-plugin/add-to-any": "^1.7.26",
    "wpackagist-plugin/acf-gravityforms-add-on": "^1.2.1",
    "wpackagist-plugin/the-events-calendar": "^4.6.18",
    "wpackagist-plugin/intuitive-custom-post-order": "^3.1.1",
    "wpackagist-plugin/wordpress-importer": "^0.6.4",
    "wpackagist-plugin/advanced-custom-fields": "^5.6.9",
    "wp-cli/wp-cli": "^1.1.0",
    "wpackagist-theme/twentyfifteen": "^2.0",
    "dzuelke/twentyfifteen-child": "*",
    "johnpbloch/wordpress": "^4.9",
    "afragen/github-updater": "^7.6",
    "seattleagainstslavery/gravityforms-stripe": "dev-master",
    "seattleagainstslavery/gravityforms": "dev-master"
  },
  "scripts": {
    "wordpress-setup-core-install-prompt": "wp core install --prompt",
    "wordpress-setup-core-install": "wp core install --skip-email",
    "wordpress-setup-clear-home": "wp option delete home || true",
    "wordpress-setup-configure-s3": "echo '{\"domain\":\"path\",\"copy-to-s3\":\"1\",\"serve-from-s3\":\"1\",\"ssl\":\"request\"}' | wp option add tantan_wordpress_s3 --format=json",
    "wordpress-setup-enable-plugins": "wp plugin activate amazon-web-services amazon-s3-and-cloudfront sendgrid-email-delivery-simplified intuitive-custom-post-order add-to-any acf-gravityforms-add-on the-events-calendar github-updater gravityforms gravityforms-stripe wordpress-importer advanced-custom-fields",
    "wordpress-setup-permalink-structure": "wp rewrite structure '/%year%/%monthnum%/%day%/%postname%/' || true",
    "wordpress-install-remote-theme": "wp theme install-git https://github.com/seattleagainstslavery/seattleagainstslavery --branch=build  --github",
    "wordpress-setup": [
      "@wordpress-setup-core-install-prompt",
      "@wordpress-setup-finalize"
    ],
    "wordpress-setup-finalize": [
      "@wordpress-setup-clear-home",
      "@wordpress-setup-configure-s3",
      "@wordpress-setup-enable-plugins",
      "@wordpress-setup-permalink-structure",
      "@wordpress-install-remote-theme"
    ],
    "wordpress-setup-demo-theme": "wp theme activate twentyfifteen-child",
    "wordpress-setup-welcome-post": [
      "echo 'It works! Please see <a href=\"https://github.com/dzuelke/wordpress-12factor\">wordpress-12factor on GitHub</a> for info and post-install instructions.' | wp post update 1 - --post_title=\"Welcome to WordPress on Heroku\""
    ]
  },
  "require-dev": {
    "heroku/heroku-buildpack-php": "*"
  }
}
